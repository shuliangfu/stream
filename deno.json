{
  "name": "@dreamer/stream",
  "version": "1.0.0-beta.1",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./client": "./src/client/mod.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "LICENSE.md",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**",
      "**/examples/**",
      "**/docs/**"
    ]
  },
  "imports": {
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@1.0.0-beta.17",
    "@dreamer/video": "jsr:@dreamer/video@1.0.0-beta.3",
    "@dreamer/socket-io": "jsr:@dreamer/socket-io@1.0.0-beta.1",
    "@dreamer/test": "jsr:@dreamer/test@1.0.0-beta.13",
    "@std/assert": "jsr:@std/assert@^1.0.16"
  },
  "nodeModulesDir": "auto",
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any",
        "require-await"
      ]
    }
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom"
    ]
  }
}
